{
  "name": "gulp-watch",
  "version": "1.2.1",
  "description": "Watch, that actually is an endless stream",
  "main": "index.js",
  "keywords": [
    "gulp",
    "watch",
    "gulpplugin"
  ],
  "scripts": {
    "test": "mocha -R spec -t 5000",
    "coverage": "istanbul cover node_modules/.bin/_mocha --report html -- -R spec",
