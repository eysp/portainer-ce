  "license": "MIT",
  "bugs": {
    "url": "https://github.com/floatdrop/gulp-watch/issues"
  },
  "devDependencies": {
    "coveralls": "^2.7.0",
    "istanbul": "^0.3.0",
    "mocha": "~1.21.4",
    "mocha-lcov-reporter": "^0.0.1",
    "proxyquire": "^1.0.1",
    "rimraf": "^2.2.8",
    "should": "~4.0.4",
    "sinon": "^1.9.1",
    "stream-assert": "^2.0.1",
    "strip-ansi": "^2.0.0",
    "touch": "0.0.3"
  },
  "dependencies": {
    "gaze": "0.5.x",
    "glob2base": "~0.0.11",
    "gulp-batch": "1.0.1",
    "gulp-util": "~3.0.0",
